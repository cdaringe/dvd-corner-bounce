{
  "name": "dvd-corner-bounce",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "cdaringe@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@types/jquery": "^3.3.31",
    "@types/lodash": "^4.14.144",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.2",
    "parcel-bundler": "^1.12.4",
    "prettier-standard": "^15.0.1",
    "standardx": "^5.0.0",
    "typescript": "^3.6.4"
  },
  "scripts": {
    "build": "parcel src/index.html",
    "start": "parcel watch src/index.html",
    "format": "prettier-standard '{src,test,scripts}/**/*.{js,jsx,ts,tsx}'",
    "lint": "standardx '{src,test,scripts}/**/*.{js,jsx,ts,tsx}' --fix"
  },
  "dependencies": {
    "add": "^2.0.6",
    "lodash": "^4.17.15",
    "phaser": "^3.20.0",
    "preact": "^10.0.0",
    "preact-compat": "^3.19.0",
    "react-flip-move": "^3.0.3",
    "yarn": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test,scripts}/**/*.{js,jsx,ts,tsx}": [
      "yarn format",
      "yarn lint",
      "git add"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": 0
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "ignore": [
      "**/*.d.ts"
    ]
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat"
  }
}
